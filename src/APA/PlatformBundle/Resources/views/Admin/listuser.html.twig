    </table>
            </div>



 <script>
        $(".loading").hide();
        $("#search").keyup(function(){
        $(".loading").show();
        var motcle = $("#search").val();
        var DATA = 'motcle=' + motcle;
        $.ajax({
        type: "POST",
        url: "{{ path('apa_platform_adminIndex')}}",
        data: DATA,
        cache: false,
        success: function(data){
           $('#resultats_recherche').html(data);
           $(".loading").hide();
        }
    });
    return false;
});
</script>


