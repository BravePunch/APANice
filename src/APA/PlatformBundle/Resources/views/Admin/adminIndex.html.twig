{% extends "::layout.html.twig" %}

{% block title %}{{ parent() }} - Admin{% endblock %}

{% block body %}


      {% for message in app.session.flashbag.get('notif') %}
          <div class="container-fluid">
            <div class="row">
              <div class="col-md-4"></div>
                <div class="col-md-4 text-center alert-info">
                  <p>{{ message }}</p>
              </div>
            </div>
          </div>
      {% endfor %}


    <h1>Admin Index</h1>

    <br/>

    <a href="{{path("apa_platform_addUser")}}">Inscription utilisateur</a>



    <h3> Liste Utilisateurs : <div class="row">
            <div class="col-2">  <form  class="form-control" method="post" action="{{ path('apa_platform_adminIndex') }}">
        
        <input type="text" class="form-control" name="search" placeholder="Nom">
        <button type="submit" class="btn btn-sm btn-success"> Recherchez </button>
    </form>
            </div>
        </div>
        </h3>
        {% for list in listUser %}
            {% if list.roles != isAdmin %}
                {{ list.prenom }} <a href="{{ path('apa_platform_deleteUser' , {'id': list.id}) }}"> <button class="btn btn-danger btn-sm"> Supprimer </button> </a>
                                  <a href="{{ path('apa_platform_editUser' , {'id': list.id}) }}"> <button class="btn btn-info btn-sm"> Modifier </button> </a>
    <hr>
            {% endif %}
        {% endfor %}


{% endblock %}
