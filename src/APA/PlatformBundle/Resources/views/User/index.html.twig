{% extends "::layout.html.twig" %}

{% block title %}{{ parent() }} - Accueil{% endblock %}

{% block body %}

    <div class="container">
    <div class="row">
        <div class="page">
            <div class="metr">
                <section id="middle">

                    <article>
                        <div>
                            <a href="#">
                                <img class="pdf" src="{{asset("img/filesBlue.png")}}"/>
                                <p class="middle text">Dossiers et fichiers</p>
                            </a>
                        </div>
                    </article>
                    <article>
                        <div>
                            <a href="#">
                                <img class="utilisateur" src="{{asset("img/userBlue.png")}}"/>
                                <p class="middle text">Ma fiche</p>
                            </a>
                        </div>
                    </article>
                    <article>
                        <div>
                            <a href="{{path('apa_message_inbox')}}">
                                <img class="message" src="{{asset("img/messageBlue.png")}}"/>
                                <p class="middle text">Messages</p>
                            </a>
                        </div>
                    </article>
                    <article>
                        <div>
                            <a href="#">
                                <img class="equipe" src="{{asset("img/teamBlue.png")}}"/>
                                <p class="middle text">Equipe et contacts</p>
                            </a>
                        </div>
                    </article>

                </section>

                <section id="right">

                    <article>
                        <div>
                            <a href="#">
                                <img class="settings1" src="{{asset("img/settingsYellow.png")}}"/>
                                <p>Enregistrement d'une séance</p>
                            </a>

                        </div>
                    </article>
                </section>

                {% block style %}

                {{ parent() }}

                <style type="text/css">
                    .menuAccueil{
                        background-color: grey;
                    }

                    @font-face {
                        /* Définition d'une nouvelle police nommée world of water*/
                        font-family: 'world of water';
                        src: url('world of water.ttf');
                    }

                    .metr p {
                        font-family: 'Verdana';
                    }

                    .container {
                        width: 100%;
                        height: 100%;
                    }

                    #middle a:hover{
                        background-color: #9AB4CB;
                    }

                    .settings1:hover {
                        background-color: lightblue;
                    }

                    #middle {
                        display: flex;
                        flex-wrap: wrap;
                        align-content: stretch;
                        width: 70%;
                        height: 100%;
                        padding: 0;
                        margin: 0;
                    }

                    #middle article {
                        background-color:#F4F3F2;
                        border: 1px solid grey;
                        width: 50%;
                        display: flex;
                        min-height:47vh;
                    }

                    #middle article div {
                        margin: auto;
                        text-align: center;
                        display: flex;
                    }

                    #middle article img {
                        width: 50%;
                        height: auto;
                    }

                    #middle article p {
                        margin-top: 35px;
                        color: #091D42;
                    }

                    #right {
                        display: flex;
                        flex: 1;
                        background-color: #F4F3F2;
                        border: 1px solid rgba(57, 106, 146, 0.3);
                        height: 94vh;
                    }

                    #right article {
                        margin: auto;
                    }

                    #right article div {
                        text-align: center;
                    }

                    #right article .settings1 {
                        width: 50%;
                        height: auto;
                    }

                    #right article p {
                        color: black;
                    }

                    #right ul {
                        padding: 0;
                    }

                    #right p,
                    ul {
                        margin-top: 35px;
                    }

                    .parameters {
                        text-align: center;
                        text-decoration: underline;
                        list-style-type: none;
                        color: white;
                    }
                </style>
                {% endblock %}
            </div>
        </div>
    </div>
</div>

{% endblock %}
