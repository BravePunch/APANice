{# This is the main layout. It is inherited by all the other twigs #}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>{% block title %}Nice Sport Santé{% endblock %}</title>

        {% block bootstrap %}
            <link rel="stylesheet" type="text/css" href="{{asset("bootstrap/css/bootstrap.min.css")}}">
            <link rel="stylesheet" type="text/css" href="{{asset("bootstrap/css/tableau_de_bord.css")}}">
            <link rel="stylesheet" type="text/css" href="{{asset("bootstrap/css/menu.css")}}">
            <script type="text/javascript" src="{{asset("jquery.js")}}"></script>
            <script type="text/javascript" src="{{asset("bootstrap/js/bootstrap.min.js")}}"></script>
        {% endblock %}

        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="{{asset("bootstrap/css/menu-icons.css")}}">
        {% endblock %}
    </head>

<body>

    {#  HEADER  #}
    <div class="container-fluid">

        <div class="row" id="mobileHeader">

            <div id="mobileGreetings">
                <p style="color:#C0C0C0;"><strong>Bonjour, {{ app.user.username }}</strong></p>
            </div>

            <div id="burgerIcon" onclick="animateBurgerIcon(this);">
                <div class="bar" id="topBar"></div>
                <div class="bar" id="midBar"></div>
                <div class="bar" id="botBar"></div>
            </div>

        </div>

        <div class="row" id="desktopHeader">

            <p style="color:#C0C0C0; padding-top:5px">
                <strong>Bonjour, {{ app.user.username }}</strong>
            </p>

            <div style="position:absolute;top:0;right:0">
                <a href="{{path('logout')}}" class="btn btn-danger" style="height:6vh"><strong>Déconnection</strong></a>
            </div>

        </div>
    </div>
    {#  END OF HEADER  #}


    <div class="container-fluid">

        <div class="row" style="min-height:94vh">

            {#  SIDEBAR  #}

            {% if is_granted('ROLE_ADMIN') %}

		{{ render(controller("APAPlatformBundle:Admin:Menu"))}}

            {% elseif is_granted('ROLE_USER') %}

		{{ render(controller("APAPlatformBundle:User:Menu"))}}

            {% endif %}

            {#  END OF SIDEBAR  #}

            {#  BODY  #}
            <div id="content" class="col-md-10" style="padding:0;">

                {% block body %}
                {% endblock %}

            </div>
            {#  END OF BODY  #}

        </div>

    </div>

</body>

{% block style %}
    <style type="text/css">
        body {
            background-color: #F4F3F2;
        }
        #mobileHeader{
            background-color: #222222;
            height: 7vh;
        }

        /* Burger menu for mobile */

        #burgerIcon {
            height: 7vh;
            width: 7vh;
            position: absolute;
            top: 0;
            right:10px;
            cursor: pointer;
        }
        #burgerIcon .bar{
            width: 7vh;
            height: 1vh;
            background-color: #C0C0C0;
            margin-bottom:2vh;
        }

        .animateBurgerIcon #topBar {
            -webkit-transform: rotate(-45deg) translate( 0px, 40px);
            -transform: rotate(-45deg) translate(-9px, 6px);
        }

        /* End of burger menu */

        #desktopHeader{
            background-color: #222222;
            height: 6vh;
        }
        #menu {
            background-color: #222222;
            padding-left: 2px;
        }
        #menu div {
            margin: 0;
            height:45px;
        }
        #menu p {
            color:#C0C0C0;
        }

        @media only screen and (min-width: 769px){
            #mobileHeader{
                display:none;
            }
        }

        /* MOBILE */

        @media only screen and (max-width:769px){

            #menu {
                display: none;
            }
            #desktopHeader{
                display: none;
            }

        }

    </style>
{% endblock %}

{% block scripts %}

    <script type="text/javascript">

        function animateBurgerIcon(icon){
            icon.classList.toggle("animateBurgerIcon");
        }

    </script>

{% endblock %}

</html>
